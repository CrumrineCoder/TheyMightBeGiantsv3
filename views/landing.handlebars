    <div id="lyrics-container">
      <div id="songs-menu-container">
        <ul class="songs-menu">
          <li ng-repeat="song in tracklist" ng-click="select($index)" ng-class="{'active': $index == currentSong}">
            <h5 ng-click='go(song.id)'>
              {[{song.name}]}
            </h5>
          </li>

        </ul>
      </div>
      <div class="lyrics-content">
        <p>{[{lyrics}]}</p>
      </div>
      <div id="album-cover-container">
        <img id="album-cover" src="../public/IMAGES/album-cover.jpg">
        <div class="CommentContainer" ng-repeat="comment in comments | reverse  | limitTo: 10 | limitTo:2">
          <div class="comment-container">
            <p class="comment-username">{[{comment.user}]}</p>
            <p class="comment-date">{[{comment.date | date:'medium'}]}</p>
            <p class="comment-text">{[{comment.text}]}</p>
          </div>
        </div>
        <form method="post" action="/create" class="form-comment" id="commenting-form">
          <!--   <label for="album">Album:</label> -->
          <input name="album" placeholder="Write your Album here." value="I Like Fun" type="hidden" />
          <label for="user">Username</label>
          <input name="user" placeholder="Write your Username here." required="true" type="text" />
          <br />
          <label for="text">Comment</label>
          <textarea name="text" placeholder="Write your Comment here." required="true" type="text"></textarea>
          <br />
          <button class="white-ghost-button" type="submit" style="margin-bottom: 10px;">Submit</button>
        </form>
      </div>
